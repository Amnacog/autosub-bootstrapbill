		#end if
	</div>
	<div class="col-sm-2 form-group-sm"><input type="text" class="form-control" name="opensubtitlesuser" value="$autosub.OPENSUBTITLESUSER" placeholder="Username"></div>
	<div class="col-sm-2 form-group-sm"><input type="text" class="form-control" name="opensubtitlespasswd" value="$autosub.OPENSUBTITLESPASSWD" placeholder="Password"></div>
	<div align="center" class= "col-sm-3 form-group-sm"><input type="button" class="btn btn-default" value="Test" id="testOpenSubtitles"></div>
</div>

