#import autosub

<div class="form-group">&nbsp;
	<label class="col-sm-2 text-right">Website</label>
	<label class="col-sm-1">&nbsp;</label>  
	<label class="col-sm-2 text-center">Username</label> 
	<label class="col-sm-2 text-center">Password</label>
	<label class="col-sm-3 text-center">Login Test</label>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Addic7ed 
		<a data-toggle="tooltip" data-original-title="Tick if you want to search subs on this website.">
			<span class="glyphicon glyphicon-info-sign"></span>
		</a>
	</label>
	<div class="col-sm-1">
		#if $autosub.ADDIC7ED:
			<div class="checkbox-inline"><input type="checkbox" name="addic7ed" checked value="Yes"></div>
		#else:
			<div class="checkbox"><input type="checkbox" name="addic7ed" value="Yes"></div>
		#end if
	</div>
	<div class="col-sm-2 form-group-sm"><input type="text" class="form-control" name="addic7eduser" value="$autosub.ADDIC7EDUSER" placeholder="Username"></div>
	<div class="col-sm-2 form-group-sm"><input type="text" class="form-control" name="addic7edpasswd" value="$autosub.ADDIC7EDPASSWD" placeholder="Password"></div>
	<div  align="center"class="col-sm-3 form-group-sm"><input type="button" class="btn btn-default" value="Test" id="testAddic7ed"></div>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label">Opensubtitles 
